<!doctype html>

<html lang="en">
<head>
  <meta charset="utf-8">
  <title>Turtl_GIFTS</title>
  <meta name="description" content="not so awkward Turtl">
  <link rel="stylesheet" href="Stylesheets/stylesheet.css">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
  <link href='https://fonts.googleapis.com/css?family=Russo+One' rel='stylesheet' type='text/css'>
  <!--[if lt IE 9]>
  <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
  <![endif]-->
</head>

<body>

<!--Sticky Navbar stuffs-->
  <nav id="navbar">

    <div id="thenav" class="container-fluid headerstuff">
      <div class="row">
            
        <!--THE LOGO-->

        <div class="logo headerstuff col-md-4 ">
          <div id="lpbox">
              <div id="LOGO">
                <p href="/home">Turtl</p>
              </div>
          </div>
        </div>

        <!--THE NON LOGGED IN PAGES-->

        <div id="notthelogin" class="headerstuff col-md-4">
          <div class="row">
            <span>            
              <button onclick="jumpto('aboutpage');" type="button" class="menutitle btn-lg col-md-4 btn btn-info">About</button>
            </span>

            <span>            
              <button onclick="jumpto('signup');" type="button" class="menutitle btn-lg col-md-4 btn btn-info">BUY</button>         
            </span>
            
            <span>        
              <button onclick="jumpto('TCs');" type="button" class="menutitle btn-lg col-md-4 btn btn-info">
              <p>Terms and</p>
              <p> Conditions</p>
              </button>         
            </span>
          </div>

        </div>

        <!--THE LOGIN FORM -->

        <div id="login" class="login headerstuff col-md-3" >
          <form class="navbar-form" >

          <div id="logoutbutton">
            <button id="logoutbutton"type="submit" class="btn btn-default" >Logout</button>
            <!--<button id="loginbutton"type="submit" class="btn btn-default" onclick="javascript:location.href='logged.html#users'">Login</button>-->
          </div>

          </form>
        </div>            
            
      </div>
    </div>

  </nav>



  <div id="GIFTS" class="container-fluid">
    
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
      <!-- Indicators -->
      <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
      </ol>

      <!-- Wrapper for slides -->
      <div class="carousel-inner" role="listbox">
        <div class="item active">
          <img src="http://thumbs4.ebaystatic.com/d/l225/m/mzqBWHc_1O8sJoQhp-V4gnQ.jpg" alt="Cuddly_Llama" height="100">
        </div>

        <div class="item">
          <img src="http://i.dailymail.co.uk/i/pix/2015/04/03/08/273FFDDF00000578-3024207-image-a-44_1428046700273.jpg" alt="Chocolate" height="100">
        </div>

        <div class="item">
          <img src="http://rlv.zcache.com/i_tried_to_change_the_world_but_no_source_code_tshirt-rb6004a997db942189b5d3153779e4089_va6lr_324.jpg" alt="SillyTShirt" height="100">
        </div>

        <div class="item">
          <img src="http://randommization.com/wp-content/uploads/2013/07/venus-flytrap-potted-plant_2.jpg" alt="Flowers" height="100">
        </div>
      </div>

      <!-- Left and right controls -->
      <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>

  </div>

  <div id="PAYMENT" class="container-fluid">

    <div>

      <p>Payments</p>
  
      <form action="checkout" method="post">
          <div id="checkout"></div>
          <input type="submit" value="PAY"></input>
      </form>

      <script src="https://js.braintreegateway.com/v2/braintree.js"></script>
      <script src="app.js"></script>

      <script>
          braintree.setup("<%= clientToken %>", "dropin", {
            container: "checkout"
          });

      </script>

      <div id="things">
        <p>Thanks for supporting</p>
      </div>

    </div>

  </div>

<footer class="container-fluid">
  <div class="row">
  <span id= "LOGOUT" class=".col-xs-6 .col-sm-4"><a href="/basic">LOGOUT</a></span>
  <span id= "ABOUT" class=".col-xs-6 .col-sm-4"> <a href="/basic#ABOUT">ABOUT</a></span>
  <span id= "TERMS AND CONDITIONS" class=".col-xs-6 .col-sm-4"> <a href="/basic#TandCs">TERMS AND CONDITIONS</a></span>
  </div>
</footer>

<!--Javscript Libraries-->

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script> 

  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>


</body>
</html>
